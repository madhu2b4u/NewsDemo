<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        card_view:cardElevation="3dp"
        android:layout_margin="3dp"
        card_view:cardPreventCornerOverlap="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorPrimary"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:clipChildren="false"
        card_view:cardCornerRadius="2dp"
        android:id="@+id/cardLayout"
        android:clipToPadding="false"
        android:divider="@android:color/transparent"
        android:elevation="3dp"
        tools:ignore="RtlCompat">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="120dp"
                android:id="@+id/articleImage"
                android:layout_margin="2dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:layout_height="120dp" />



            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_margin="2dp"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/textViewTitle"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/textViewAuthor"
                    android:textColor="@color/colorPrimary"
                    android:padding="2dp"
                    android:visibility="gone"
                    android:text="By JENNIFER MEDINA, KATIE BENNER and KATE TAYLOR"
                    android:layout_height="match_parent" />


             <LinearLayout
                 android:layout_width="match_parent"
                 android:orientation="horizontal"
                 android:layout_marginBottom="5dp"
                 android:layout_height="wrap_content">

                 <TextView
                     android:layout_width="match_parent"
                     android:id="@+id/textViewDate"
                     android:textColor="@color/colorPrimary"
                     android:textSize="12dp"
                     android:drawableLeft="@drawable/ic_date_range_blue_grey_200_18dp"
                     android:drawablePadding="@dimen/padd_10"
                     android:padding="2dp"
                     android:text=""
                     android:layout_weight="1"
                     android:gravity="bottom"
                     android:layout_height="wrap_content" />

                 <TextView
                     android:layout_width="wrap_content"
                     android:id="@+id/textViewReadMore"
                     android:textColor="@color/colorPrimary"
                     android:textSize="12dp"
                     android:padding="2dp"
                     android:drawableLeft="@drawable/ic_keyboard_arrow_right_black_18dp"
                     android:text="Read More"
                     android:textStyle="bold"
                     android:layout_height="wrap_content" />


             </LinearLayout>


            </LinearLayout>



        </LinearLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>